{% set rounded = 'rounded' %}
{% set color = haveRedBar ? 'bg-danger' : '' %}
{% if haveRedBar %}
{% set color = 'bg-danger' %}
{% set rounded = 'rounded-bottom' %}
{% endif %}

<div class="rounded overflow-hidden mx-0 py-0 block-title justify-content-between">
  <div class="{{ color }} w-100" style="height: 5px">
  </div>
  <div class="row mx-2">
    <div class="col-auto py-1 px-4 title-text-bg {{ rounded }}">
      <span class="text-light font-weight-bold"> {{ title }} </span>
    </div>
    <div class="col">
    </div>
    <div class="col-auto">
      {% if not noMore %}
      <span class="text-primary link-more">更多</span>
      {% endif %}
    </div>
  </div>
  <div class="w-100" style="height: 5px">
  </div>
</div>
